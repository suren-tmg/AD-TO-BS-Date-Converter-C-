@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
        <div class="row">
            <center><p style="font-size:25px;line-height:1.5;">@ViewBag.NepaliDate</p></center>
        </div>
        <form method="post" action="@Url.Action("Index","Home",new {area=""})">
            <label>Pick A Date</label>
            <input name="Date" value="@ViewBag.EnglishDate" type="date" class="form-control" />
            <hr />
            <center><input type="submit" class="btn btn-success" value="Convert Now" /></center>
        </form>
    </div>
    <div class="col-md-4">

    </div>
</div>